# Ghostty config (macOS)

# ===== Theme =====
# Separate light/dark themes and let Ghostty follow the OS appearance.
theme = dark:GitHub Dark Default,light:GitHub Light Default
window-theme = auto

# ===== Fonts =====
# Ordered fallbacks. Remove or replace with your installed fonts.
font-family = "JetBrains Mono"
font-family = "Sarasa Term SC"
font-family = "PingFang SC"
font-family = "Apple Color Emoji"
font-size = 15
# Optional: disable programming ligatures
font-feature = -calt

# ===== Cursor / Selection =====
cursor-style = block
cursor-style-blink = false
mouse-hide-while-typing = true
# Copy on select to the system clipboard
copy-on-select = clipboard

# ===== Scrollback =====
# Ghostty uses bytes for the scrollback buffer. ~10MB â‰ˆ 50k lines at ~200 chars/line.
scrollback-limit = 10000000

# ===== Window Appearance =====
background-opacity = 0.92
background-opacity-cells = true
background-blur = 20
window-padding-x = 10
window-padding-y = 8
window-padding-balance = true
split-divider-color = #58a6ff

# ===== macOS Behavior =====
macos-option-as-alt = true
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
window-save-state = always

# Avoid garbled output in remote sessions
shell-integration-features = ssh-terminfo

# ===== Quick Terminal =====
quick-terminal-position = top
quick-terminal-size = 35%
quick-terminal-autohide = true
quick-terminal-animation-duration = 0.12

# ===== Keybindings =====
# Keep Cmd+C for copy only when there is a selection.
keybind = performable:cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = cmd+t=new_tab
keybind = cmd+w=close_tab
keybind = cmd+shift+w=close_window
keybind = cmd+shift+]=next_tab
keybind = cmd+shift+[=previous_tab
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+shift+space=toggle_command_palette
keybind = cmd+shift+o=open_config
keybind = cmd+shift+r=reload_config
# Global quick terminal (requires Accessibility permission on macOS)
keybind = global:cmd+backquote=toggle_quick_terminal
